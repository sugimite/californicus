<h1>宿題内容</h1>

<div id="generic-form">
  <%= form_with url: create_homeworks_admin_students_path, method: :post, scope: :homework, local: true do |f| %>
    <% @student_ids&.each do |id| %>
      <%= hidden_field_tag "student_ids[]", id %>
    <% end %>

    <div>
      <%= f.label :homework_type, "宿題内容", class: "required" %>
      <%= f.select :homework_type, Homework::HOMEWORK_TYPES, { include_blank: "選択してください" }, { class: "form-select", required: true } %>
    </div>

    <div>
      <%= f.label :page, "ページ" %>
      <%= f.text_area :page, class: "form-textarea" %>
    </div>

    <div>
      <%= f.label :assigned_date, "宿題を課す日" %>
      <%= f.date_field :assigned_date, value: Date.current, class: "form-date-field" %>
    </div>

    <div>
      <%= f.label :deadline, "提出日" %>
      <%= f.date_field :deadline, value: Date.current + 7, class: "form-date-field" %>
    </div>

    <div>
      <%= f.submit "宿題を課す", class: "form-submit" %>
    </div>
  <% end %>
</div>

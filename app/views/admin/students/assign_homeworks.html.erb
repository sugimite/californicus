<h1>宿題を一斉に割り当てる</h1>

<%= form_with url: create_homeworks_admin_students_path, method: :post, scope: :homework do |form| %>
  <% @student_ids&.each do |id| %>
    <%= hidden_field_tag "student_ids[]", id %>
  <% end %>

  <div>
    <%= form.label :homework_type, "宿題内容", class: "required" %>
    <%= form.select :homework_type, Homework::HOMEWORK_TYPES, { include_blank: "選択してください" }, required: true %>
  </div>

  <div>
    <%= form.label :page, "ページ" %>
    <%= form.text_area :page %>
  </div>

  <div>
    <%= form.label :assigned_date, "宿題を課した日" %>
    <%= form.date_field :assigned_date, value: Date.current %>
  </div>

  <div>
    <%= form.label :deadline, "提出日" %>
    <%= form.date_field :deadline, value: Date.current + 7 %>
  </div>

  <div>
    <%= form.submit "宿題を課す" %>
  </div>
<% end %>

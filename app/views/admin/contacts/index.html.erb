<% 
@title =
  case params[:action]
  when "index"; "全メッセージ一覧"
  when "inbound"; "問い合わせ一覧"
  when "outbound"; "返信一覧"
  else; raise
  end
%>
<h1><%= @title %></h1>

<div class="tabs">
  <%= link_to "全メッセージ", admin_contacts_path, class: "tab" %>
  <%= link_to "問い合わせ", inbound_admin_contacts_path, class: "tab" %>
  <%= link_to "返信", outbound_admin_contacts_path, class: "tab" %>
</div>

<div class="table-wrapper">
  <table class="listing">
    <tr>
      <th>種類</th>
      <th>送信者</th>
      <th>件名</th>
      <th>日時</th>
      <th>アクション</th>
    </tr>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.contact_id == nil ? "問い合わせ" : "返信" %></td>
        <td><%= contact.sender %></td>
        <td><%= contact.title %></td>
        <td><%= contact.date.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to "詳細", admin_contact_path(contact) %></td>
      </tr>
    <% end %>
  </table>
</div>

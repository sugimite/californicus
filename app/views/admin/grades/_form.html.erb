<div class="notes">
  <span class="mark">*</span> 印のついた項目は入力必須です。
</div>
<div>
  <%= f.label :year, "年度", class: "required" %>
  <%= f.text_field :year, required: true %>
</div>
<div>
  <%= f.label :test_type, "テスト種別", class: "required" %>
  <%= f.select :test_type, Grade::TEST_TYPES, { include_blank: "選択してください"}, required: true  %>
</div>
<div>
  <%= f.label :subject_type, "教科", class: "required" %>
  <% Grade::SUBJECT_TYPES.each do |subject| %>
  <%= f.radio_button :subject_type, subject %><%= subject %>
  <% end %>
</div>
<div>
  <%= f.label :score, "得点", class: "required" %>
  <%= f.text_field :score, required: true %>
</div>

<header>
  <%= link_to "学力増進研究会", :admin_root, class: "logo-mark" %>

  <div id="header-content">
    <div id="new-contacts-notification" class="new-contacts-notification">
      <% if @unread_contacts_count.to_i > 0 %>
        新規問い合わせ（<%= @unread_contacts_count %>）
      <% end %>
    </div>

    <%= content_tag(:span, flash.notice, class: "notice") if flash.notice %>
    <%= content_tag(:span, flash.alert, class: "alert") if flash.alert %>

    <%=
      if current_administrator
        link_to "ログアウト", :admin_session, data: { turbo_method: :delete }
      else
        link_to "ログイン", :admin_login
      end
    %>
  </div>
</header>

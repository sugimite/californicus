<div class="message <%= contact.is_from_parents ? 'right' : 'left' %>">
  <% unless contact.is_from_parents %>
    <span class="from-label">from 学進会</span>
  <% end %>
  <p><%= simple_format(contact.message) %></p>
  <span class="time"><%= contact.created_at.strftime('%Y-%m-%d %H:%M:%S') %></span>
  <% if contact.is_from_parents %>
    <span class="links"><%= link_to "メッセージを削除する", student_contact_path(contact.id), data: { turbo_confirm: "本当に削除しますか？", turbo_method: :delete }%></span>
  <% end %>
</div>

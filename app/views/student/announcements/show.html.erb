<% @title = "お知らせ" %>

<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
    <%= link_to "お知らせ一覧", :student_announcements %>　　
  </div>

  <table class="attributes">
    <tr>
      <th>件名</th>
      <td>
        <%= @announcement.title %>
      </td>
    </tr>
    <tr>
      <th>掲載開始日</th>
      <td>
        <%= @announcement.start_date.strftime("%Y/%m/%d") %>
      </td>
    </tr>
    <tr>
      <th>掲載終了日</th>
      <td>
        <%= @announcement.end_date.strftime("%Y/%m/%d") %>
      </td>
    </tr>

    <tr>
      <th>内容</th>
      <td>
        <%= simple_format(@announcement.content) %>
      </td>
    </tr>
  </table>
</div>
